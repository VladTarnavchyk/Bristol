									$childProductCollection = $_product->getTypeInstance()->getAssociatedProducts($_product);
									$assicoateProductsQty = 0;
									$priceForAll = 0;
									foreach ($childProductCollection as $child) {
										if($child->getQty() * 1 > 0) {
